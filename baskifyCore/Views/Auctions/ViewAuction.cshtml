    function addTicket(basketId, numTickets) {
        $.ajax({
            url: "/api/baskets/" + basketId + "/ticket/add/" + numTickets,
            method: "POST",
            beforeSend: function (xhr) {
                var token = getCookie("BearerToken");
                if (token != "")
                    xhr.setRequestHeader("Authorization", "Bearer " + token);
            },
            success: function (data) {
                $(".basketCard[data-id=" + basketId + "]").find("h3 span").html(data.numTickets); //update ticket count on basket card
                if (walletBalance - numTickets > 0)
                    $("#walletBalance span").html(walletBalance - numTickets); //add to purchase button
                else
                    $("#walletBalance").html("Purchase Tickets");
                walletBalance -= numTickets;
                if (walletBalance == 0)
                    $(".addTicket").attr("disabled", ""); //disable if all spent
                $("#ticketAddFailed").css("display", "none"); //remove any error message
                createAddToast(data.basketTitle, numTickets); //toast the success
                baskets.forEach(function (basket) {
                    if (basket.basketId == basketId)
                        basket.numTickets = data.numTickets; //to keep the inner state valid
                });
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                //HANDLE TICKET ADD ERROR
                $("#ticketAddFailed span").html(XMLHttpRequest.responseText);
                $("#ticketAddFailed").css("display", "block");
            }
        });
    }

    function buildCardList() {
        $("#cardsLoading").css("display", "block");
        var container = $("#cardTable tbody");
        container.html(""); //clear container
        $.ajax({
            url: "/api/payments/methods",
            type: "GET",
            beforeSend: function (xhr) { //add token
                var token = getCookie("BearerToken");
                if (token != "")
                    xhr.setRequestHeader("Authorization", "Bearer " + token);
            },
            success: function (data) {
                for (var pm of data) {
                    var card = pm.card;
                    var html = `<tr style='cursor:pointer'>`;
                    html += `<td><img style='height:20px' src='` + pm.iconPath + `'></td>`;
                    html += `<td>&bull;&bull;&bull;&bull; ` + card.last4 + `</td>`;
                    html += `<td>Expires ` + card.expMonth + "/" + card.expYear + `</td>`;
                    html += `<td><div class="deleteButton">&times;</div></td></tr>`;
                    container.append(html);
                    container.children("tr").last().data("paymentMethod", pm);
                }
                var html = `<tr class='addCard' style="text-align: center; cursor:pointer"></td><td colspan='4'><img src='/Content/CardIcons/generic.svg' style='height:20px; padding-right:5px'>Add Card</td></tr>`;
                container.append(html);
                $("#cardTable .addCard").click(); //select new card
                $("#cardsLoading").css("display", "none");
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                var html = "<tr style='text-align:center'>" + XMLHttpRequest.responseText + "</tr>"
            }
        });
    }

    $(document).on("click", "#cardTable tr", function (e) {
        if ($(this).hasClass("deleteButton"))
            return; //do nothing when clicking delete
        var tr = $(e.currentTarget);
        $("#cardTable tr").removeClass("selected"); //remove all
        tr.addClass("selected"); //select
        var form = $(".newCardForm");
        if (tr.hasClass("addCard")) {
            form.css("display", "block").animate({ opacity: 1 }, 500); //show
        }
        else {
            form.animate({ opacity: 0 }, 500, function () { $(this).css("display", "none") }); //hide
        }
    });

    $(document).on("click", ".deleteButton", function (e) {
        var row = $(e.currentTarget).closest("tr");
        var id = row.data().paymentMethod.id;
        $.ajax({
            url: "/api/payments/methods",
            method: "delete",
            data: { paymentMethodId: id },
            beforeSend: function (xhr) { //add token
                var token = getCookie("BearerToken");
                if (token != "")
                    xhr.setRequestHeader("Authorization", "Bearer " + token);
            },
            success: function (data) {
                row.remove(); //remove row in table
            }
        });
    });

